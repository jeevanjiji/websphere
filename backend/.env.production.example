# Production Environment Configuration for Backend
# Copy this file to .env and update the values for production deployment

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/websphere?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your_very_secure_jwt_secret_key_change_this

# Frontend URL - IMPORTANT: Update this to your production frontend URL
FRONTEND_URL=https://your-production-frontend.com

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_change_this

# Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your_production_google_client_id
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id

# Brevo Email Configuration
BREVO_API_KEY=your_production_brevo_api_key
BREVO_SMTP_USER=your_production_smtp_user
BREVO_FROM_EMAIL=your_production_email@yourapp.com

# Cloudinary Configuration (if using)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay Configuration (if using)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# Additional Production Settings
# Add any other environment variables your app needs