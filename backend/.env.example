# ==========================================
# WebSphere Backend â€” Environment Variables
# ==========================================
# 1. Copy this file:  cp .env.example .env
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit your .env file!
# ==========================================

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/websphere?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=development
PORT=5000
JWT_SECRET=replace_with_a_strong_random_secret_min_32_chars
SESSION_SECRET=replace_with_another_strong_random_secret_min_32_chars

# CORS (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# URLs
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Google OAuth Configuration
# Get credentials at: https://console.cloud.google.com/apis/credentials
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Brevo Email Configuration (formerly Sendinblue)
# Sign up: https://brevo.com  |  SMTP key: https://app.brevo.com/settings/keys/smtp
BREVO_API_KEY=your_brevo_smtp_api_key
BREVO_SMTP_USER=your_brevo_smtp_login
BREVO_FROM_EMAIL=noreply@yourdomain.com

# Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Cloudinary Configuration (Required for image uploads)
# Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay Configuration
# Dashboard: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Groq AI Configuration (AI Assistant + Chat Summarizer)
# Get key at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key
